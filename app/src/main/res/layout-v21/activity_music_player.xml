<?xml version="1.0" encoding="utf-8"?>

<!--
    voice recorder page design

    @author Azmin Azran
-->


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="com.example.oishun.MusicPlayer"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="18dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/back_button_image"
            android:clickable="true"
            android:contentDescription="@string/backbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/round_button"
            tools:srcCompat="@drawable/round_button"
            android:focusable="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/image"
        android:layout_marginTop="110dp"
        android:contentDescription="AudioArt" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="-10dp">

        <ImageButton
            android:id="@+id/rewindButton"
            android:layout_width="100dp"
            android:layout_height="170dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="?android:selectableItemBackground"
            android:contentDescription="rewind"
            android:src="@drawable/rewind" />

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:layout_marginTop="100dp"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/play"
            android:contentDescription="play" />

        <ImageButton
            android:id="@+id/volumeButton"
            android:layout_width="100dp"
            android:layout_height="170dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?android:selectableItemBackground"
            android:contentDescription="volume"
            android:src="@drawable/sound2" />
    </RelativeLayout>

    <SeekBar
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:progressTint="@color/oiShunYellow"
        android:thumbTint="@color/oiShunYellow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/oiShunYellow"
            android:textSize="20sp"
            android:text="@string/_0_00"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/oiShunYellow"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:text="@string/_3_00"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>


</LinearLayout>