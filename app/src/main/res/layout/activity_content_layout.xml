<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:weightSum="4"
        android:layout_marginStart="10dp"
        >

        <ImageView
            android:id="@+id/audio_cover_photo"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:paddingTop="5dp"

            android:src="@drawable/music_icon_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"

       >
            <TextView
                android:id="@+id/content_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content Name"

                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FBBE03"
                android:fontFamily="@font/archivo_regular"
                />
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artiist Name"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FBBE03"
                android:fontFamily="@font/archivo_regular"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:03"
                android:paddingLeft="15dp"
                android:paddingTop="1dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FBBE03"
                android:fontFamily="@font/archivo_regular"
                />




        </LinearLayout>

    </LinearLayout>

